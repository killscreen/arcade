{

    time: {
        now: ...current system time, in seconds...
        delta: ...seconds since last loop...
        scene: ...since scene started...
    },

    controller: {
        direction: [ left-right, up-down ]
        triggers: [{
            on: ...pressed...
            fire: ...just became pressed...
            click: ...was previously fired...        
        }]
    }

    display: [{
        sprite: ...
        position: [ x, y ]
        palette: {}   
    }]

}
